<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
	>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    >
	    <TextView
			android:id="@+id/list_music_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:textColor="@color/context_foreground"
		/>
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        >
	        <TextView
				android:id="@+id/list_composer_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textColor="@color/context_foreground"
				android:layout_alignParentLeft="true"
			/>
	        <TextView
				android:id="@+id/list_music_download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="X"
				android:textSize="16sp"
				android:textColor="@color/context_foreground"
				android:layout_alignParentRight="true"
				android:layout_marginRight="5dp"
			/>
	    </RelativeLayout>
		
	</LinearLayout>
	<ImageButton
	    android:id="@+id/main_bookmark_cb"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/ic_input_delete"
	    android:layout_gravity="center_vertical"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    />
</LinearLayout>